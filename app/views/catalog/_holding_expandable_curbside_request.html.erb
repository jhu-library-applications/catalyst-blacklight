<% if holding.requestable? && holding.status %>
  <%- if holding.special_collection? %>
    <%= link_to "Request", special_collection_request_url(document, holding), {:class => "request btn btn-primary btn-sm"} %>
  <%- else %>
    <%= link_to "Request Pickup", item_request_path(:id => document_id, :item_id => holding.id, :referer => request.fullpath), {:class => "request btn btn-primary btn-sm", :data => {:blacklight_modal => "trigger"}} %>
  <%-end %>
<% end %>
