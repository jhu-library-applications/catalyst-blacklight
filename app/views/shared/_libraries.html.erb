<div class="row navbar navbar-expand-md navbar-dark bg-dark" id="jhu-main-nav">
  <div class="col-6 col-md-6">
    <div class="">
      <button type="button" class="navbar-toggler collapsed" data-toggle="collapse" data-target="#jhu-navbar">
        <span class="navbar-toggler-icon"></span>
        <span class="sr-only">Toggle library links menu navigation</span>
      </button>
      <div class="collapse navbar-collapse" id="jhu-navbar">
        <ul class="navbar-nav">
          <% I18n.t("jhu_public.jhu_nav.links").each do |site| %>
            <li class="nav-item">
              <%= link_to site[:label], site[:link], {class: 'nav-link'} %>
            </li>
          <% end %>
        </ul>
      </div><!-- /.nav-collapse -->
    </div>
  </div>
  <div class="col-6 col-md-6">
    <div class="row">
      <div class="col-md-8" style="text-align: right;">
        <ul class="account-dropdown">
          <li class="nav-item bookmarks-link">
            <%= link_to bookmarks_path, :class => "nav-link" do %>
              Bookmarks
              (<span data-role='bookmark-counter'><%= current_or_guest_user.bookmarks.count %></span>)
            <% end %>
          </li>
          <% if current_user %>
            <li class="nav-item">
              <div class="dropdown">
                <a class="dropdown-toggle"
                        id="accountMenuButton"
                        data-toggle="dropdown"
                        aria-haspopup="true"
                        aria-expanded="false"
                >
                  <%= current_user.jhed_lid || current_user.login %>
                </a>
                <div class="dropdown-menu" aria-labelledby="accountMenuButton">
                  <%= link_to "Account", {:controller => "users", :action => "update"}, class: "dropdown-item  nav-link" %>
                  <%= link_to "Checked Out", {:controller => "users", :action => "itemsout"}, {class: 'dropdown-item nav-item'} %>
                  <%= link_to "Requests", {:controller => "users", :action => "requests"}, {class: 'dropdown-item nav-item'} %>
                  <%= link_to destroy_user_session_path, {class: 'dropdown-item nav-link'} do %>
                    Log Out
                  <% end %>
                </div>
              </div>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to new_user_session_path, {class: 'nav-link'} do %>
                Login
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
      <div class="col-md-4" style="z-index: 0;">
      </div>
    </div>
  </div>
</div>
