<div class="request" data-ajax-modal="container">
  <div class="modal-header">
    <h3 class="modal-title">Request Placed</h3>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  
  <div class="modal-body">
    <%= render :partial => "head_notes" %>
    
    <p>
      Item will be delivered and held for you at <strong><%= @pickup_location %></strong>.
    </p>

    <%= render :partial => "foot_notes" %>
  </div>

  <div class="modal-footer">
    <%= link_to "OK", request_done_path, :class => "btn btn-primary", :data => {:dismiss => "modal"} %>
  </div>  

</div>
